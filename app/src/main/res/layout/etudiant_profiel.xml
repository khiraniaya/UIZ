<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Etudiant">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profileimage"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="30dp"
        android:scaleType="centerCrop"
        android:src="@drawable/im7" />

    <RelativeLayout
        android:id="@+id/relativename"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/profileimage"
        android:layout_marginTop="55dp"
        android:paddingVertical="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="70dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NOM"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/nom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="choukri "
                android:textColor="@color/black"
                android:textSize="20sp" />


        </LinearLayout>

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/prenom_etudiant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/profileimage"
        android:layout_marginTop="210dp"
        android:paddingVertical="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="70dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PRENOM"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/prenom"
                android:layout_width="89dp"
                android:layout_height="wrap_content"
                android:text="chaimae"
                android:textColor="@color/black"
                android:textSize="20sp" />


        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/cin_etudiant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/relativename"
        android:paddingVertical="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="70dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="cne"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/cin"
                android:layout_width="86dp"
                android:layout_height="wrap_content"
                android:text="D1287940"
                android:textColor="@color/black"
                android:textSize="20sp" />


        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>